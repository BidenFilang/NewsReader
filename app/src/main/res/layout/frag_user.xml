<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/my_register"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/colorLightRed"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/my_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/icon_head"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:id="@+id/my_head_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击登录"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorLightRed"
            android:clickable="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/user_collect"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/icon_collect"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/user_attention"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/icon_attention"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/user_cache"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/icon_download"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="缓存"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/user_sign"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/icon_sign"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签到"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/colorGray"/>

        <TextView
            android:id="@+id/my_msg"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/icon_msg"
            android:paddingLeft="10dp"
            android:gravity="center|left"
            android:text="  消息"
            android:textSize="20dp"
            android:drawableRight="@drawable/icon_my_jt"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/colorGray"/>

        <TextView
            android:id="@+id/my_money"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/icon_money"
            android:paddingLeft="10dp"
            android:gravity="center|left"
            android:text="  钱包"
            android:textSize="20dp"
            android:drawableRight="@drawable/icon_my_jt"/>

        <TextView
            android:id="@+id/my_store"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/icon_store"
            android:paddingLeft="10dp"
            android:gravity="center|left"
            android:text="  商城"
            android:textSize="20dp"
            android:drawableRight="@drawable/icon_my_jt"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/colorGray"/>

        <TextView
            android:id="@+id/my_setting"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/icon_setting"
            android:paddingLeft="10dp"
            android:gravity="center|left"
            android:text="  设置"
            android:textSize="20dp"
            android:drawableRight="@drawable/icon_my_jt"/>
    </LinearLayout>

</LinearLayout>